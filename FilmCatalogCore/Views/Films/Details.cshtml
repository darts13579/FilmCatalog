@model FilmViewDetailModel

@{
    ViewData["Title"] = "Детальная страница";
}

<a asp-action="Index">Back to List</a>

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="col-md-12">
        <section class="panel">
            <div class="panel-body">
                <div class="col-md-6">
                    <img style="max-height: 500px" src="@Model.PosterUrl" alt="">
                </div>
                <div class="col-md-6">
                    <h4 class="pro-d-title">
                        @Model.Name
                    </h4>

                    <div class="m-bot15">
                        <strong>Режиссёр : </strong>@Model.Producer
                    </div>

                    <p>
                        <strong>Описание: </strong>@Model.Description
                    </p>

                    <small>Добавил на сайт: @Model.Author</small>
                </div>
            </div>
        </section>
    </div>
</div>

@{
    if (Model.CanEdit)
    {
        <div class="mt-5">
            <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
        </div>
    }
}